<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    xmlns:tools="http://schemas.android.com/tools"    xmlns:app="http://schemas.android.com/apk/res-auto">    <TextView        android:id="@+id/date"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        android:layout_marginStart="20dp"        android:layout_marginTop="10dp"        tools:text="11/01/2024 11:21"        />    <ImageView        android:id="@+id/temp_icon"        android:layout_width="20dp"        android:layout_height="40dp"        android:src="@drawable/temperature"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@id/date"        android:layout_marginStart="20dp"        />    <TextView        android:id="@+id/temp"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="0.0C"        app:layout_constraintStart_toEndOf="@id/temp_icon"        app:layout_constraintTop_toTopOf="@id/temp_icon"        app:layout_constraintBottom_toBottomOf="@id/temp_icon"        android:layout_marginStart="10dp"        />    <ImageView        android:id="@+id/pressure_icon"        android:layout_width="20dp"        android:layout_height="40dp"        android:src="@drawable/pressure"        app:layout_constraintStart_toEndOf="@id/temp"        app:layout_constraintTop_toTopOf="@id/temp_icon"        app:layout_constraintBottom_toBottomOf="@id/temp_icon"        android:layout_marginStart="20dp"        />    <TextView        android:id="@+id/pressure"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="0.0Bar"        app:layout_constraintStart_toEndOf="@id/pressure_icon"        app:layout_constraintTop_toTopOf="@id/temp_icon"        app:layout_constraintBottom_toBottomOf="@id/temp_icon"        android:layout_marginStart="10dp"        />    <ImageView        android:id="@+id/humidity_icon"        android:layout_width="20dp"        android:layout_height="40dp"        android:src="@drawable/humidity"        app:layout_constraintStart_toEndOf="@id/pressure"        app:layout_constraintTop_toTopOf="@id/temp_icon"        app:layout_constraintBottom_toBottomOf="@id/temp_icon"        android:layout_marginStart="20dp"        />    <TextView        android:id="@+id/humidity"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="0.0%"        app:layout_constraintStart_toEndOf="@id/humidity_icon"        app:layout_constraintTop_toTopOf="@id/temp_icon"        app:layout_constraintBottom_toBottomOf="@id/temp_icon"        android:layout_marginStart="10dp"        />    <ImageView        android:id="@+id/acceleration_icon"        android:layout_width="20dp"        android:layout_height="40dp"        android:src="@drawable/acceleration"        app:layout_constraintStart_toEndOf="@id/humidity"        app:layout_constraintTop_toTopOf="@id/temp_icon"        app:layout_constraintBottom_toBottomOf="@id/temp_icon"        android:layout_marginStart="20dp"        />    <TextView        android:id="@+id/acceleration"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="0 km/h"        app:layout_constraintStart_toEndOf="@id/acceleration_icon"        app:layout_constraintTop_toTopOf="@id/temp_icon"        app:layout_constraintBottom_toBottomOf="@id/temp_icon"        android:layout_marginStart="10dp"        />    <View        android:id="@+id/delimiter"        android:layout_width="match_parent"        android:layout_height="1dp"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toBottomOf="@id/temp_icon"        android:layout_marginTop="10dp"        android:background="@color/white"        /></androidx.constraintlayout.widget.ConstraintLayout>